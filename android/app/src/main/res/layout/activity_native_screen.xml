<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->

    <!-- Blue Box for Recipient Info -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Native Screen"
        android:textSize="24sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <LinearLayout
        android:id="@+id/info_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:background="#0e1778"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:id="@+id/recipient_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receipient Mobile Number: 1212121212"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Amount: ₹1222"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Display Entered Number -->
    <TextView
        android:id="@+id/entered_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/info_box"
        android:layout_marginTop="16dp" />

    <!-- Number Pad -->
    <GridLayout
        android:id="@+id/number_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entered_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:columnCount="3">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btn_1"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="1"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <Button
            android:id="@+id/btn_2"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="2"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <Button
            android:id="@+id/btn_3"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="3"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn_4"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="4"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <Button
            android:id="@+id/btn_5"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="5"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <Button
            android:id="@+id/btn_6"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="6"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn_7"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="7"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <Button
            android:id="@+id/btn_8"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="8"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="9"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="⌫"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <Button
            android:id="@+id/btn_0"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="0"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:text="C"
            android:background="@drawable/circle_background"
            android:textSize="28dp"
            android:layout_margin="12dp"
            android:textColor="#348feb"/>
    </GridLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/number_pad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="#0e1778"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_reactangle_button"/>

</RelativeLayout>
